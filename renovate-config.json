{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Shared Renovate configuration for dsb-norge projects. Minor and patch updates are collected into the same PR, while major updates are ignored.",
  "platform": "github",
  "enabledManagers": [
    "npm",
    "maven"
  ],
  "extends": [
    ":prConcurrentLimit10",
    "workarounds:all",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":pinAllExceptPeerDependencies",
    ":disableMajorUpdates"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "maven",
        "npm"
      ],
      "groupName": "combined - minor and patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "typescript"
      ],
      "allowedVersions": [
        "!/>=5.7.0/"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "vue-tsc"
      ],
      "allowedVersions": [
        "!/2.2.0/"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "registryUrls": [
        "https://maven.pkg.github.com/dsb-norge/.github",
        "https://repo.maven.apache.org/maven2/"
      ]
    },
    {
      "matchManagers": [
        "maven"
      ],
      "matchPackageNames": [
        "co.elastic.clients:elasticsearch-java",
        "org.elasticsearch.client:elasticsearch-rest-client"
      ],
      "allowedVersions": [
        "!/8.15.x/"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "maven"
      ],
      "matchPackageNames": [
        "org.apache.sshd:sshd-scp"
      ],
      "allowedVersions": [
        "!/2.14.x/"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "maven"
      ],
      "matchPackageNames": [
        "!no.dsb:elastic-exporter-api",
        "!no.dsb:brannstatistikk-api"
      ]
    },
    {
      "matchManagers": [
        "maven"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true,
      "matchPackageNames": [
        "/^no\\.dsb.*/"
      ]
    }
  ],
  "ignoreScripts": true,
  "prHourlyLimit": 4,
  "reviewers": [
    "dsb-developers"
  ],
  "schedule": [
    "after 12:30am and before 6:30am every weekday",
    "every weekend"
  ],
  "updateNotScheduled": false,
  "timezone": "Europe/Oslo",
  "automerge": true,
  "labels": [
    "pr-created-by-renovate"
  ]
}
